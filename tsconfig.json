{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "strict": true,
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
